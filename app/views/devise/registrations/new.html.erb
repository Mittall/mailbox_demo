<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
      </div>
      <div class="small-9 columns">
         <h3>Sign Up</h3>
      </div>
    </div>
  </div>
</div>
<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="row">
    <div class="small-8">
      <div class="row">
        <div class="small-3 columns">
          <label for="right-label" class="right">Email <small>(required)</small></label>
        </div>
        <div class="small-9 columns">
           <%= f.email_field :email, autofocus: true, :required => true, :placeholder => "abc@example.com" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="small-8">
      <div class="row">
        <div class="small-3 columns">
          <label for="right-label" class="right">
            Password 
            <small> 
              <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
            </small>
          </label>
        </div>
        <div class="small-9 columns">
          <%= f.password_field :password, autocomplete: "off", :required => true, :placeholder => "Password" %>
        </div>
      </div>
    </div>

  <div class="row">
    <div class="small-8">
      <div class="row">
        <div class="small-3 columns">
          <label for="right-label" class="right">Password Confirmation<small>(required)</small></label>
        </div>
        <div class="small-9 columns">
          <%= f.password_field :password_confirmation, autocomplete: "off", :required => true, :placeholder => "Confirm password" %>
        </div>
      </div>
    </div>

  <div class="row">
    <div class="small-8">
      <div class="row">
        <div class="small-3 columns">
        </div>
        <div class="small-9 columns">
          <%= f.submit "Sign up",  :class => "button [tiny small large]" %>  
        </div>
      </div>
    </div>
  </div>

<% end %>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
      </div>
      <div class="small-9 columns">
        <div><%= link_to "Already "%><%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</div>

